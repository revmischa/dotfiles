# Shell aliases for productivity

# Basic commands
alias l="ls -la"
alias ll="ls -l"
alias la="ls -la"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Modern replacements (if available)
command -v bat >/dev/null && alias cat="bat"
command -v eza >/dev/null && alias ls="eza"
command -v fd >/dev/null && alias find="fd"
command -v rg >/dev/null && alias grep="rg"
command -v btm >/dev/null && alias top="btm"
command -v nvim >/dev/null && alias vim="nvim" && alias vi="nvim"

# Git aliases
alias g='git'
compdef g=git
alias gst='git status'
compdef _git gst=git-status
alias gl='git pull'
compdef _git gl=git-pull
alias gup='git fetch && git rebase'
compdef _git gup=git-fetch
alias gp='git push'
compdef _git gp=git-push
gdv() { git diff -w "$@" | view - }
compdef _git gdv=git-diff
alias gc='git commit -v'
compdef _git gc=git-commit
alias gca='git commit -v -a'
compdef _git gca=git-commit
alias gco='git checkout'
compdef _git gco=git-checkout
alias gcm='git checkout master'
alias gb='git branch'
compdef _git gb=git-branch
alias gba='git branch -a'
compdef _git gba=git-branch
alias gcount='git shortlog -sn'
compdef gcount=git
alias gcp='git cherry-pick'
compdef _git gcp=git-cherry-pick
alias glg='git log --stat --max-count=5'
compdef _git glg=git-log
alias glgg='git log --graph --max-count=5'
compdef _git glgg=git-log
alias gss='git status -s'
compdef _git gss=git-status
alias ga='git add'
compdef _git ga=git-add
alias gm='git merge'
compdef _git gm=git-merge
alias grh='git reset HEAD'
alias grhh='git reset HEAD --hard'

# Docker
alias dk="docker"
alias dkc="docker compose"
alias dkps="docker ps"
alias dki="docker images"
alias dkrm="docker rm"
alias dkrmi="docker rmi"
alias dke="docker exec -it"
alias dkl="docker logs"
alias dkb="docker build"

# Kubernetes
alias k="kubectl"
alias kgp="kubectl get pods"
alias kgs="kubectl get services"
alias kgd="kubectl get deployments"
alias kdp="kubectl describe pod"
alias kds="kubectl describe service"
alias kdd="kubectl describe deployment"
alias kl="kubectl logs"
alias ke="kubectl exec -it"

# Package managers
{{- if eq .chezmoi.os "darwin" }}
alias br="brew"
alias bri="brew install"
alias brs="brew search"
alias bru="brew update"
alias brug="brew upgrade"
alias brc="brew cleanup"
{{- end }}

{{- if eq .chezmoi.os "linux" }}
alias apt-update="sudo apt update"
alias apt-upgrade="sudo apt upgrade"
alias apt-install="sudo apt install"
alias apt-search="apt search"
alias apt-remove="sudo apt remove"
{{- end }}

# Node.js and npm
alias n="npm"
alias ni="npm install"
alias nid="npm install --save-dev"
alias nis="npm install --save"
alias nr="npm run"
alias ns="npm start"
alias nt="npm test"
alias nb="npm run build"
alias nc="npm run clean"

# Python
alias py="python3"
alias pip="pip3"
alias venv="python3 -m venv"
alias activate="source venv/bin/activate"


# Rust
alias ca="cargo"
alias cab="cargo build"
alias car="cargo run"
alias cat="cargo test"
alias cac="cargo check"
alias caf="cargo fmt"
alias cal="cargo clippy"

# Go
alias gob="go build"
alias gor="go run"
alias got="go test"
alias gom="go mod"
alias gog="go get"

# Development
alias serve="python3 -m http.server 8000"
alias myip="curl -s ifconfig.me"
alias weather="curl -s wttr.in"
alias speedtest="curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python -"

# System utilities
alias ports="lsof -i -P -n | grep LISTEN"
alias diskusage="df -h"
alias meminfo="free -h"
alias cpuinfo="lscpu"

# Text editing
alias nv="nvim"
command -v nvim >/dev/null || alias v="$EDITOR"

# Networking
alias ping="ping -c 5"
alias wget="wget -c"

# Archive utilities
alias tarc="tar -czf"
alias tarx="tar -xzf"
alias unzip="unzip -q"

# Quick navigation
alias projects="cd ~/Projects"
alias downloads="cd ~/Downloads"
alias documents="cd ~/Documents"
alias desktop="cd ~/Desktop"

# Process management
alias psg="ps aux | grep"
alias killall="killall -v"

# File operations
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"
alias mkdir="mkdir -p"

# Reload shell
alias reload="source ~/.zshrc"

# Show/hide hidden files in Finder (macOS)
{{- if eq .chezmoi.os "darwin" }}
alias showfiles="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hidefiles="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
{{- end }}

# Quick edits
alias zshconfig="chezmoi edit ~/.zshrc"
alias gitconfig="chezmoi edit ~/.gitconfig"
alias aliasconfig="chezmoi edit ~/.aliases"
