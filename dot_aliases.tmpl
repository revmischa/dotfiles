# Shell aliases for productivity

# Basic commands
alias l="ls -la"
alias ll="ls -l"
alias la="ls -la"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Modern replacements (if available)
command -v bat >/dev/null && alias cat="bat"
command -v eza >/dev/null && alias ls="eza"
command -v nvim >/dev/null && alias vim="nvim" && alias vi="nvim"

# aws
alias asso='aws sso login'

# git
alias git-pull='git pull --no-edit'
alias gi='gitui'
alias gsup="git submodule foreach 'git pull'"
alias gcom="git switch master"
alias gcoom="git checkout origin/master"
alias gcum="git fetch up && git merge up/master -m 'merging upstream'"
alias gmod="git merge origin/develop"
alias gmoom="git merge origin/master"
alias pp='git pull && git push'
alias gpop="git push origin master:prod"
alias cam='git commit -am'
alias ci="git commit"
alias lg="lazygit"
alias grbom="git rebase origin/master"
alias grbom-theirs="git rebase -Xtheirs origin/master"
alias grbom-ours="git rebase -Xours origin/master"
alias smup="pushd ~/.emacs.d && git pull --rebase && popd"
alias wip="git commit -am 'WIP'"
alias wipp="wip && gp"

alias gbr="git branch --remote"
alias gsw="git switch"
alias gswc="git switch -c"
alias gswm="git switch main"
alias gswm="git switch master"
alias gswd="git switch develop"
alias gswt="git switch -t"
alias gswr="git switch -r"
alias gsa="git stash apply"


# Docker
alias dk="docker"
alias dkc="docker compose"
alias dkps="docker ps"
alias dki="docker images"
alias dkrm="docker rm"
alias dkrmi="docker rmi"
alias dke="docker exec -it"
alias dkl="docker logs"
alias dkb="docker build"

# Kubernetes
alias k="kubectl"
alias kgp="kubectl get pods"
alias kgs="kubectl get services"
alias kgd="kubectl get deployments"
alias kdp="kubectl describe pod"
alias kds="kubectl describe service"
alias kdd="kubectl describe deployment"
alias kl="kubectl logs"
alias ke="kubectl exec -it"

# Terraform
alias terraform="tofu"
alias tfmt="tofu fmt -recursive"

# Package managers
{{- if eq .chezmoi.os "darwin" }}
alias br="brew"
alias bri="brew install"
alias brs="brew search"
alias bru="brew update"
alias brug="brew upgrade"
alias brc="brew cleanup"
{{- end }}

{{- if eq .chezmoi.os "linux" }}
alias apt-update="sudo apt update"
alias apt-upgrade="sudo apt upgrade"
alias apt-install="sudo apt install"
alias apt-search="apt search"
alias apt-remove="sudo apt remove"
{{- end }}

# Node.js and npm
alias p="pnpm"
alias pi="pnpm i"
alias pid="pnpm i -D"
alias pr="pnpm run"
alias px='pnpm exec'
alias pns="pnpm start"
#alias pt='pnpm test'
#alias prb='pnpm build'
alias vt='pnpm exec vitest'
alias vr='vt run'
alias sst='pnpm exec sst'
alias y="yarn"

# Python
alias py="python3"
alias pip="pip3"
alias pt="pytest"
alias ptf="pytest -f"
alias venv="python3 -m venv"
alias activate="source venv/bin/activate"
alias uvsh="source .venv/bin/activate"

# Rust
alias ca="cargo"
alias cab="cargo build"
alias car="cargo run"
alias cac="cargo check"
alias caf="cargo fmt"
alias cal="cargo clippy"

# Development
alias serve="python3 -m http.server 8000"
alias myip="curl -s ifconfig.me"
alias weather="curl -s wttr.in"
alias speedtest="curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python -"

# System utilities
alias ports="lsof -i -P -n | grep LISTEN"
alias diskusage="df -h"
alias meminfo="free -h"
alias cpuinfo="lscpu"

# Text editing
alias nv="nvim"
command -v nvim >/dev/null || alias v="$EDITOR"

# Networking
alias ping="ping -c 5"
alias wget="wget -c"

# Archive utilities
alias tarc="tar -czf"
alias tarx="tar -xzf"
alias unzip="unzip -q"

# Quick navigation
alias projects="cd ~/Projects"
alias downloads="cd ~/Downloads"
alias documents="cd ~/Documents"
alias desktop="cd ~/Desktop"

# Process management
alias psg="ps aux | grep"
alias killall="killall -v"

# File operations
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"
alias mkdir="mkdir -p"

# Reload shell
alias reload="source ~/.zshrc"

# Show/hide hidden files in Finder (macOS)
{{- if eq .chezmoi.os "darwin" }}
alias showfiles="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hidefiles="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
{{- end }}

# Quick edits
alias zshconfig="chezmoi edit ~/.zshrc"
alias gitconfig="chezmoi edit ~/.gitconfig"
alias aliasconfig="chezmoi edit ~/.aliases"
